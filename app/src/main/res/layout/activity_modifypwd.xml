<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="为了保证账号安全，我们需要验证手机1234567890"
        android:textColor="#d1d1d1"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/lay_sharp8">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_getcode"
            android:layout_toStartOf="@+id/tv_getcode"
            android:background="@null"
            android:hint="输入验证码"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="#313131"
            android:textColorHint="#d1d1d1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/lay_sharp9"
            android:gravity="center"
            android:padding="10dp"
            android:text="获取验证码"
            android:textColor="#fff"
            android:textSize="16sp" />

    </RelativeLayout>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/lay_sharp8"
        android:hint="输入新密码"
        android:padding="10dp"
        android:textColor="#313131"
        android:textColorHint="#d1d1d1"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="6-20位数字或字符，区分大小写"
        android:textColor="#d1d1d1"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/lay_sharp2"
        android:gravity="center"
        android:padding="10dp"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="18sp" />
</LinearLayout>