<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/mselect"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="全选"
            android:textColor="#aaa"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="伴奏"
            android:textColor="#313131"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/img_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/select" />

        <TextView
            android:id="@+id/tv_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="完成"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_choice"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:divider="@color/bgColor"
        android:dividerHeight="1dp"
        android:scrollbars="none"></ListView>

    <LinearLayout
        android:id="@+id/ll_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_cgood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/mdcgood"
            android:gravity="center"
            android:padding="5dp"
            android:text="点赞"
            android:textColor="#cdcdcd"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_ccollect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/mdccollect"
            android:gravity="center"
            android:padding="5dp"
            android:text="收藏"
            android:textColor="#cdcdcd"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/mdcload"
            android:gravity="center"
            android:padding="5dp"
            android:text="下载"
            android:textColor="#cdcdcd"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>