<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#40000000">

    <TextView
        android:id="@+id/tv_dongtai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_place"
        android:layout_marginRight="50dp"
        android:drawableTop="@drawable/hcphoto"
        android:gravity="center"
        android:text="发动态"
        android:textColor="#fff"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/img_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:src="@drawable/homebtn" />

    <TextView
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img_center"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:drawableTop="@drawable/hcplace"
        android:gravity="center"
        android:text="接场所"
        android:textColor="#fff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_dongtai"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-20dp"
        android:drawableTop="@drawable/hcvoice"
        android:gravity="center"
        android:text="找演员"
        android:textColor="#fff"
        android:textSize="12sp" />

</RelativeLayout>