<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <sinia.com.entertainer.view.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/jhead" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_head"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/img_head"
            android:layout_toRightOf="@+id/img_head"
            android:text="周杰伦"
            android:textColor="#313131"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_job1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_head"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/img_head"
            android:layout_toRightOf="@+id/img_head"
            android:background="@drawable/lay_sharp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="job1"
            android:textColor="#b6b6b6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_job2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_head"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/tv_job1"
            android:layout_toRightOf="@+id/tv_job1"
            android:background="@drawable/lay_sharp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="job1"
            android:textColor="#b6b6b6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_job3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_head"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/tv_job2"
            android:layout_toRightOf="@+id/tv_job2"
            android:background="@drawable/lay_sharp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="job1"
            android:textColor="#b6b6b6"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>