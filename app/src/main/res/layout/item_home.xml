<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lay_sharp5"
        android:orientation="vertical">

        <sinia.com.entertainer.view.RoundRectLeftImageView
            android:id="@+id/img_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/chead" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_img"
            android:background="#fff"
            android:gravity="center"
            android:padding="5dp"
            android:text="标题标题标题标题标题标题标题标题"
            android:textColor="#313131"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:background="@drawable/lay_sharp6"
            android:gravity="right"
            android:paddingBottom="4dp"
            android:paddingRight="7dp"
            android:text="2016-12-2 12:00:00"
            android:textColor="#999"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>