<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_music"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="音乐资料"
                android:textColor="@color/mainColor"
                android:textSize="14sp" />

            <View
                android:id="@+id/view_1"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_music"
                android:layout_centerHorizontal="true"
                android:background="@color/mainColor" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="视频资料"
                android:textColor="#313131"
                android:textSize="14sp" />

            <View
                android:id="@+id/view_2"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_video"
                android:layout_centerHorizontal="true"
                android:background="#fff" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_art"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_art"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="演艺圈"
                android:textColor="#313131"
                android:textSize="14sp" />

            <View
                android:id="@+id/view_3"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_art"
                android:layout_centerHorizontal="true"
                android:background="#fff" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <sinia.com.entertainer.view.MyListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:divider="@color/bgColor"
                android:dividerHeight="1dp"
                android:scrollbars="none"></sinia.com.entertainer.view.MyListView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>